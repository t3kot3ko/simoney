= form_for(@user, url: user_registration_path(@user), html: {class: "form-horizontal"}) do |f|

  .form-group
    %label.col-lg-2.control-label メールアドレス
    .col-sm-6
      = f.email_field :email, class: 'form-control', required: false
      = @user.errors[:email]
  .form-group
    %label.col-lg-2.control-label パスワード
    .col-sm-6
      = f.password_field :password, class: 'form-control', required: true, disabled: false
      = @user.errors[:password]
  .form-group
    %label.col-lg-2.control-label ユーザ名
    .col-sm-6
      = f.text_field :name, class: 'form-control', required: true, disabled: false
      = error_span(@user[:email])
  .form-group
    %label.col-lg-2.control-label 現在の資産
    .col-sm-6
      .input-group
        = f.text_field :property, class: 'form-control', required: true
        .input-group-addon 円
      = error_span(@user[:property])

  = f.submit "登録", class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), root_path, :class => 'btn btn-default'

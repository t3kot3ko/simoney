- model_class = Plan

.page-header
  %h1 収支計画一覧

%table.table.table-condensed
  %tbody
    %tr
      %th 計画日
      %th カテゴリ
      %th 収支計画
    - @user.plans.order(:planned_at).after_today.each do |plan|
      %tr
        %td= plan.planned_at
        %td= plan.category
        - if plan.amount > 0
          %td.info= plan.amount
        - else
          %td.danger= plan.amount

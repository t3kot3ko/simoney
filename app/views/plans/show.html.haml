- model_class = Plan
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @plan.user_id
%p
  %strong= model_class.human_attribute_name(:category) + ':'
  %br
  = @plan.category
%p
  %strong= model_class.human_attribute_name(:amount) + ':'
  %br
  = @plan.amount
%p
  %strong= model_class.human_attribute_name(:planned_at) + ':'
  %br
  = @plan.planned_at


= link_to t('.back', :default => t("helpers.links.back")), plans_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_plan_path(@plan), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), plan_path(@plan), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

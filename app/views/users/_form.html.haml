= form_for @user, url: {controller: "users", action: :update}, html: { class: "form-horizontal"} do |f|
  .form-group
    %label.col-lg-2.control-label ユーザ名
    .col-sm-6
      = f.text_field :name, class: 'form-control', required: true
      = error_span(@user[:name])
  .form-group
    %label.col-lg-2.control-label メールアドレス
    .col-sm-6
      = f.text_field :email, class: 'form-control', required: true, disabled: true
      = error_span(@user[:email])

  = f.submit "更新", class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), dashboard_user_path, :class => 'btn btn-default'
